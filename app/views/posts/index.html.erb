<main class="posts-page container">
  <section class="posts">
    <% if @posts.any? %>
      <%= render @posts %>
    <% else %>
      <p>No posts yet.</p>
    <% end %>
  </section>

  <aside>
    <%= render current_user %>

    <section class="suggestions">
      <h4>Suggestions to you</h4>

      <%= render @suggested_users %>
    </section>
  </aside>

  <footer>
    &copy; <%= Time.now.year %> INSTAGRAM CLONE
  </footer>
</main>
